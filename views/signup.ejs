<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>

</head>
<body>
    
<section class="section-one">
    <!-- do not remove this. this is the background -->

</section>

<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong> You should check in on some of those fields below.
     <li>Name length should be greater than 3 Ex:-abcde</li>
     <li>email length should be greater than 4 Ex:-abcd@gmail.com</li>
     <li>Password length should be greater than 6</li>
      <li>Phone no should be greater than 8</li>
    </strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
  </div>


        
<section class="col-sm-8 offset-sm-2 section-two pt-5 pb-5 animate__animated animate__jello">
    <h1 class="text-center font-weight-bold sign-up-logo pb-2">Sign Up</h1>
    <div class="row align-items-center">
        <div class="col-sm-8 offset-sm-2">
           
            <form  action="/create" method="POST">
                
              
                <div class="form-group">
                    <label for="InputName">Name</label>
                    <input type="text" class="form-control" id="InputName" name="name" required>
                </div>
                
               
                <div class="form-group">
                    <label for="InputEmail">Email</label>
                    <input type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp"
                        placeholder="abc@xyz.com" name="email" required  >
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small>
                </div>
                <div class="form-group">
                    <label for="InputPassword">Password</label>
                    <input type="password" class="form-control" id="InputPassword" required name="password" value="<%= typeof password != 'undefined' ? password : '' %>">
              
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword" required name="confirm_password">
                </div>
                <div class="form-group">
                    <label for="Phoneno">Phone-no</label>
                  
                    <input type="tel" name="phoneno" id="Phone-no" class="form-control" required placeholder="Enter your Phone no">
                </div>
               
                <div class="form-group">
                    <label for="gender" class="">Gender</label><br>
                    Male<input type="radio" name="gender" id="" value="Male" required>&nbsp;&nbsp;
                    Female<input type="radio" name="gender" id="" value="Female" required>&nbsp;&nbsp;
                    Prefer Not To Say <input type="radio" name="gender" id="" value="Not To Say" required>


                </div>
                <div class="form-group">
                    <label for="married">Married</label>
                    Yes <input type="radio" name="married" id="" value="Yes" required>
                    No <input type="radio" name="married" value="No" required>
                </div>
                <div class="form-group">
                    <div class="form-check form-switch">
                       <label for="">Language</label>&nbsp;
                      English <input type="radio" name="language" id="" value="English">
                       
                      </div>

                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          
        </div>
    </div>
</section>

<script src="/JS/app.js">
    alert("gunnu")
</script>
</body>
</html>